<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        app:cardCornerRadius="4dp"
        android:elevation="2dp"
        app:cardElevation="2dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp">

            <ImageView
                android:id="@+id/mImageViewAvatar"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/mTextViewItemName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@+id/mImageViewAvatar"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="John Skeet" />

            <TextView
                android:id="@+id/mTextViewItemAccountId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@+id/mImageViewAvatar"
                app:layout_constraintTop_toBottomOf="@+id/mTextViewItemName"
                tools:text="1275873" />

            <ImageView
                android:id="@+id/mImageViewItemGolBadgeIcon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="16dp"
                android:importantForAccessibility="no"
                android:src="@drawable/gold"
                app:layout_constraintStart_toEndOf="@+id/mTextViewItemAccountId"
                app:layout_constraintTop_toBottomOf="@+id/mTextViewItemName" />

            <TextView
                android:id="@+id/mTextViewItemGoldBadge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                app:layout_constraintStart_toEndOf="@+id/mImageViewItemGolBadgeIcon"
                app:layout_constraintTop_toBottomOf="@+id/mTextViewItemName"
                tools:text="800" />

            <ImageView
                android:id="@+id/mImageViewItemSilverBadgeIcon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="16dp"
                android:importantForAccessibility="no"
                android:src="@drawable/gold"
                app:layout_constraintStart_toEndOf="@+id/mTextViewItemGoldBadge"
                app:layout_constraintTop_toBottomOf="@+id/mTextViewItemName" />

            <TextView
                android:id="@+id/mTextViewItemSilverBadge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                app:layout_constraintStart_toEndOf="@+id/mImageViewItemSilverBadgeIcon"
                app:layout_constraintTop_toBottomOf="@+id/mTextViewItemName"
                tools:text="8764" />

            <ImageView
                android:id="@+id/mImageViewItemBronzeBadgeIcon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="16dp"
                android:importantForAccessibility="no"
                android:src="@drawable/bronze"
                app:layout_constraintStart_toEndOf="@+id/mTextViewItemSilverBadge"
                app:layout_constraintTop_toBottomOf="@+id/mTextViewItemName" />

            <TextView
                android:id="@+id/mTextViewItemBronzeBadge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                app:layout_constraintStart_toEndOf="@+id/mImageViewItemBronzeBadgeIcon"
                app:layout_constraintTop_toBottomOf="@+id/mTextViewItemName"
                tools:text="8955" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</FrameLayout>